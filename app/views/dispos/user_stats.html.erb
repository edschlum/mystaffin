<div class="container-fluid">
	<div class="row-fluid">
    <div class="span3">
      	<div class="well sidebar-nav">
		            <ul class="nav nav-list">
		              <li class="nav-header">Statistiques</li>
		              <li class="active"><a href="#">Taux de production</a></li>
		            </ul>
		          </div>
    </div>
    <div class="span9">
		<h2 id="month">
		<ul class="pager">
		    <li class="previous">
		    <%= link_to '«', :month => (@date.prev_month-1) %>
		    </li>
		<%=h @date.strftime("%B %Y") %>
		    <li class="next">
		   	<%= link_to "»", :month => (@date.next_month+1) %>
		    </li>
		    </ul>
			  </h2>	
	   <% weekdays = [0,6] %>
	   <% day_first = @date.at_beginning_of_month %>
	   <% day_last = @date.at_beginning_of_month.next_month %>
		
		
 	Nombre de jours ouvrés : <% bday = calculate_working_days(day_first, day_last, weekdays).round %> <%= bday %><br />

	<% mission = user_nbre_mission("En mission") %>	<br />
	
	<% tx_libre = nbre_not_mission(bday,user_nbre_mission("Congés"),user_nbre_mission("Formation"),user_nbre_mission("Disponible"))%>
	Ton taux de production du mois en cours: <strong><%= tx_production(mission,tx_libre) %></strong>


	<% @statuts.each do |statut| %>
	
	<% end %>
	<br /><br />
	<script type="text/javascript">
	$(function () {
	    var chart;
	    $(document).ready(function() {
	        chart = new Highcharts.Chart({
	            chart: {
	                renderTo: 'dispos_charts',
	                type: 'column'
	            },
	            title: {
	                text: 'Disponibilités'
	            },
	            subtitle: {
	                text: 'BT Secteur Public'
	            },
	            xAxis: {
	                categories: [
						<% @statuts.each do |statut| %>
						'<%= statut.name %>',
						<% end %>
	                ]
	            },
	            yAxis: {
	                min: 0,
	                title: {
	                    text: 'Jours'
	                }
	            },
	            legend: {
	                layout: 'vertical',
	                backgroundColor: '#FFFFFF',
	                align: 'left',
	                verticalAlign: 'top',
	                x: 100,
	                y: 70,
	                floating: true,
	                shadow: true
	            },
	            tooltip: {
	                formatter: function() {
	                    return ''+
	                        this.x +': '+ this.y +' jours';
	                }
	            },
	            plotOptions: {
	                column: {
	                    pointPadding: 0.2,
	                    borderWidth: 0
	                }
	            },
	                series: [{
	                name: 'Disponibilités',
	                data: [
					<% @statuts.each do |statut| %>
					<%= current_user.dispos.where(:jour => (@date.beginning_of_month)..(@date.end_of_month)).where(:statut_id => statut.id).count %>,
					<% end %>
					  ]
	            }]
	        });
	  });
	});
	</script>
	<div id="dispos_charts">

	</div>
	<div id="data">

	</div>



    </div>
  </div>
	</div>