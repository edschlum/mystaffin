<h3>Inscription</h3>

<%= form_for(resource, :as => resource_name, :html => { :class => 'well form-horizontal' }, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label :name, 'Nom', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :first_name, 'PrÃ©nom', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, 'E-mail', :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, 'Mot de passe', :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, 'Confirmation du mot de passe', :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "S'inscrire!", :class => 'btn btn-primary' %>
  </div>


<%= render "devise/shared/links" %>
<% end %>