<div class="container">
	<h4>Identifiez-vous</h4>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "well form-horizontal" }) do |f| %>
<div class="control-group">
 	<%= label_tag :email, 'Votre e-mail', :class => 'control-label' %>
		<div class="controls">
  			<%= f.email_field :email, :class => 'text_field', :placeholder => "prenom.nom@entreprise.com" %>
		</div>
</div>
<div class="control-group">
  <%= label_tag :password, 'Votre mot de passe', :class => 'control-label' %>
	<div class="controls">
  <%= f.password_field :password, :class => 'text_field', :placeholder => "Mot de passe" %>
	</div>
</div>
<% if devise_mapping.rememberable? -%>
<div class="controls">
	<label class="checkbox">
    	<%= f.check_box :remember_me %> <%= f.label :remember_me, 'Se souvenir de moi' %>
		</label>
</div>
<% end -%>
<div class="control-group">
	<div class="controls">
		<%= f.submit "Connexion", :class => "btn" %>
	</div>
	<div class="control-group">	

	</div>	
	<div class="controls">
		<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
		  <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name) %><br />
		<% end -%>
		</div >
		<div class="controls">		
		<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		  <%= link_to "S'inscrire", new_registration_path(resource_name) %><br />
		<% end -%>
			</div >
</div>	
<% end %>


